@model ProFit.Web.Models.Feriado

@{
    ViewData["Title"] = "Deletar feriado";
}

<div class="row mt-4">
    <h2>Deseja deletar este registro?</h2>
</div>

<div class="row col-5 mb-5">
    <form asp-action="Delete" method="post">
        <div class="mb-3">
            <label class="form-label" asp-for="Data"></label>
            <input type="date" class="form-control" asp-for="Data" readonly>
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="Descricao"></label>
            <input type="text" class="form-control" asp-for="Descricao" readonly>
        </div>
        <div class="mb-3">
            <input type="hidden" name="Id" asp-for="@Model.Id" />
            <input class="btn btn-danger" type="submit" value="Deletar" />
            <a class="btn btn-secondary" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>
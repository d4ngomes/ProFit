@model ProFit.Web.Models.Feriado

@{
    ViewData["Title"] = "Cadastrar data";
}

<div class="row mt-4">
    <h2>Cadastrar data</h2>
</div>

@if (TempData["Msg"] != null)
{
    <div class="row mt-4 col-md-5">
        <div class="alert alert-danger" role="alert">
            @TempData["Msg"]
        </div>
    </div>
}

<div class="row col-5 mb-5">
    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label class="form-label" asp-for="Data"></label>
            <input type="date" class="form-control" asp-for="Data">
            <span asp-validation-for="Data" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="Descricao"></label>
            <input type="text" class="form-control" asp-for="Descricao">
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input class="btn btn-danger" type="submit" value="Salvar" />
            <a class="btn btn-secondary" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
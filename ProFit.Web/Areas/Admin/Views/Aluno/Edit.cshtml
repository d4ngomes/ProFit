@model ProFit.Web.Models.Aluno

@{
    ViewData["Title"] = "Editar Aluno";
}

<div class="row mt-4">
    <h2>Editar Aluno</h2>
</div>

@if (TempData["Msg"] != null)
{
    <div class="row mt-4 mb-4 col-md-6">
        <div class="alert alert-danger" role="alert">
            @TempData["Msg"]
        </div>
    </div>
}

<div class="row col-6 mb-5">
    <form asp-action="Edit" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label class="form-label" asp-for="Nome"></label>
            <input type="text" maxlength="60" class="form-control" placeholder="Digite o nome" asp-for="Nome">
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="Email"></label>
            <input type="email" maxlength="40" class="form-control" placeholder="Digite o e-mail" asp-for="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="Cpf"></label>
            <input type="number" class="form-control" placeholder="Digite o CPF. Somente Números." asp-for="Cpf">
            <span asp-validation-for="Cpf" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label" asp-for="DataNascimento"></label>
            <input type="date" class="form-control" placeholder="Data de Nascimento" asp-for="DataNascimento">
            <span asp-validation-for="DataNascimento" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input class="form-check-input" asp-for="Ativo" type="checkbox">
            <label class="form-check-label" asp-for="Ativo"></label>
        </div>
        <div class="mb-3">
            <input type="hidden" name="Id" asp-for="@Model.Id" />
            <input class="btn btn-danger" type="submit" value="Salvar" />
            <a class="btn btn-secondary" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@model ProFit.Web.Models.Aluno

@{
    ViewData["Title"] = "Detalhes do Aluno";
}

<div class="row mt-4">
    <h2>Detalhes do Aluno</h2>
</div>

<div class="row col-6 mb-5">
    <div class="mb-3">
        <label class="form-label" asp-for="Nome"></label>
        <input type="text" class="form-control" placeholder="Digite o nome" asp-for="Nome" readonly>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Email"></label>
        <input type="email" class="form-control" placeholder="Digite o e-mail" asp-for="Email" readonly>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Cpf"></label>
        <input type="number" class="form-control" placeholder="Digite o CPF. Somente Números." asp-for="Cpf" readonly>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="DataNascimento"></label>
        <input type="date" class="form-control" placeholder="Data de Nascimento" asp-for="DataNascimento" readonly>
    </div>
    <div class="mb-3">
        <input class="form-check-input" asp-for="Ativo" type="checkbox" disabled>
        <label class="form-check-label" asp-for="Ativo"></label>
    </div>
    <div class="mb-3">
        <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
        <a class="btn btn-secondary" asp-action="Index">Voltar</a>
    </div>
</div>